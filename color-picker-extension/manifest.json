{
    "name": "XColor智能取色器",
    "version": "1.0.0",
    "description": "跨网页使用的系统级取色工具---刘希航",
    "manifest_version": 3,
    "permissions": ["clipboardWrite", "storage"],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "128": "icons/icon128.png"
    }
}